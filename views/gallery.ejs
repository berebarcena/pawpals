<!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/css/normalize.css" rel="stylesheet" type="text/css">
  <link href="/css/main.css" rel="stylesheet" type="text/css">
</head>

<body>

  <h1> Here are all the doggos
  </h1>
  <H3>Filter your search</H3>
  <form method="POST" action="/dogs/all" autocomplete="off">
    <label for="dog-breed"> Breed</label>
    <select name="breed" id="breeds">
      <option value='all'>All</option>
      <% breeds.forEach(b => { %>
      <option value="<%= b%>">
        <%= b%>
      </option>
      <% }) %>
    </select>

    <label for="dog-age">Age </label>
    <input type="number" step="any" name="age" placeholder="age in years">

    <label for="dog-gender">Gender </label>
    <select name="gender">
      <option value='all'>All</option>
      <option value="Female">Female</option>
      <option value="Male">Male </option>
    </select>
    <button type="submit">Filter</button>

  </form>
  <% dogs.forEach(dog => { %>
  <a href='/dog/<%= dog.id %>'>
    <div>
      <ul>
        <li>
          <h1>
            <%= dog.name%>
          </h1>
        </li>
        <li>
          <%= dog.breed%>
        </li>
        <li>
          <%= dog.age%>
        </li>
        <li>
          <%= dog.gender%>
        </li>
      </ul>
      <img src="<%= dog.imageUrl%>">
    </div>
  </a>


  <% }) %>

  <script type="text/javascript" src=""></script>
</body>

</html>