<!DOCTYPE html>

<%- include('partials/head', { title: 'Dog profile' }) %>

<body>
  <%- include('partials/navigation') %>
  <%  if (dog.userId === user.id) { %>
  <nav>
    <a href="/user/<%= user.id %>">back to your profile</a>
    <a href="/dogs">see all dogs</a>
  </nav>
  <%} else {%>
  <nav>
    <a href="/dogs">back to all dogs</a>
  </nav>
  <%} %>

  <h1>
    <%= dog.name %>'s details</h1>
  <p>Breed:
    <%= dog.breed %>
  </p>
  <p>Age:
    <%= dog.age %>
  </p>
  <p>Gender:
    <%= dog.gender %>
  </p>
  <p>Location:
    <%= dog.user.region %>
  </p>
  <p>Description:
    <%= dog.description %>
  </p>
  <img src="<%=dog.imageUrl %>" />
  <%  if (dog.userId === user.id) { %>
  <div class="actions">
    <a href='/dog/<%= dog.id %>/edit'>Edit</a>
    <a href="#" class="toggle">Delete</a>
  </div>
  <%} %>
  <div id="deleteModal">
    <div class="wrapper">
      <h2>Are you sure you want to delete this dog?</h2>
      <a href="#" class="toggle">Never mind, close this shit</a>
      <form method="POST" action='/dog/<%= dog.id %>/delete'>
        <button type="submit">Go ahead, delete
          <%= dog.name %></button>
      </form>
    </div>
  </div>


  <%- include('partials/footer') %>
  <script type="text/javascript" src="/javascript/dogProfile.js"></script>
</body>

</html>